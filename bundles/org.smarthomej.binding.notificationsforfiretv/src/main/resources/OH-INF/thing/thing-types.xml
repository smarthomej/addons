<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="notificationsforfiretv"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="notification">
		<label>Notifications for Fire TV</label>
		<description>Notifications for Fire TV Binding</description>

		<config-description>
			<parameter name="ip" type="text" required="true">
				<context>network-address</context>
				<label>IP Address</label>
				<description>Device ip address.</description>
			</parameter>
			<parameter name="port" type="integer" required="true" min="0" max="65535">
				<label>Port</label>
				<description>Device port listening to connections.</description>
				<default>7676</default>
			</parameter>
			<!-- parameter name="type" type="integer" required="false" min="0" max="65535">
				<label>Type</label>
				<description>Type of the notification.</description>
				<default>0</default>
				</parameter -->
			<parameter name="title" type="text" required="false">
				<label>Title</label>
				<description>Title of the notification.</description>
				<default>OpenHAB</default>
			</parameter>
			<parameter name="duration" type="integer" required="false" min="0" max="65535">
				<label>Duration</label>
				<description>Duration of the notification.</description>
				<default>10</default>
			</parameter>
			<!-- NO EFFECT parameter name="fontsize" type="integer" required="false" min="0" max="65535">
				<label>Font size</label>
				<description>Font size of the notification.</description>
				<default>0</default>
				</parameter -->
			<parameter name="position" type="integer" required="false" min="0" max="65535">
				<label>Position</label>
				<description>Position of the notification.</description>
				<default>0</default>
				<options>
					<option value="0">Bottom right</option>
					<option value="1">Bottom left</option>
					<option value="2">Top right</option>
					<option value="3">Top left</option>
					<option value="4">Center</option>
					<option value="5">Slide top right</option>
				</options>
			</parameter>
			<!-- NO EFFECT parameter name="bkgcolor" type="text" required="false">
				<label>Background color</label>
				<description>Background color of the notification.</description>
				<default>#607d8b</default>
				</parameter -->
			<parameter name="transparency" type="integer" required="false" min="0" max="65535">
				<label>Transparency</label>
				<description>Transparency of the notification.</description>
				<default>2</default>
			</parameter>
			<parameter name="offset" type="integer" required="false" min="0" max="65535">
				<label>Horizontal offset</label>
				<description>Horizontal offset of the notification.</description>
				<default>0</default>
			</parameter>
			<parameter name="offsety" type="integer" required="false" min="0" max="65535">
				<label>Vertical offset</label>
				<description>Vertical offset of the notification.</description>
				<default>0</default>
			</parameter>
			<!-- SAME AS TITLE parameter name="app" type="text" required="false">
				<label>Application name</label>
				<description>Application name of the notification.</description>
				<default>OpenHAB</default>
				</parameter -->
			<parameter name="force" type="boolean" required="false">
				<label>Force</label>
				<description>Force to show the notification.</description>
				<default>true</default>
			</parameter>
			<!-- NO EFFECT parameter name="interrupt" type="integer" required="false" min="0" max="65535">
				<label>Interrupt</label>
				<description>Interruptable notification.</description>
				<default>0</default>
				</parameter -->
		</config-description>
	</thing-type>
</thing:thing-descriptions>
